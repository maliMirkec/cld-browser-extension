{
  "name": "Code Line Daily",
  "version": "1.3",
  "description": "Explore a new line of code every day.",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://cld.silvestar.codes/*"
  ],
  "chrome_url_overrides": {
    "newtab": "cld.html"
  },
  "content_scripts": [
    {
      "matches": ["https://cld.silvestar.codes/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "cld16.png",
    "32": "cld32.png",
    "48": "cld48.png",
    "128": "cld128.png"
  }
}
